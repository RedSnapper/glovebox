<h1>
  <%= @share.title || "Share for #{@share.email}" %>
</h1>
<% if @share.description -%>
  <h4>
    Description
  </h4>
  <div class="description">
    <%= @share.description %>
  </div>
<% end -%>


<div class="form-stacked">
  <div class="actions">
    <%= link_to "Edit", edit_share_path(@share), :class => "btn" %>
    <%= link_to "Delete", @share, :method => "delete", :class => "btn danger" %>
  </div>
</div>
