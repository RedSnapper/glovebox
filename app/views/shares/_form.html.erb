<%= form_for @share, :class => "form-stacked" do |f| %>
  <%= render 'layouts/errors', :object => @share %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description, :rows => 12, :class => "xlarge" %>
    </div>
  </div>

  <div class="clearfix">
    <div class="input">
      Please note, the user will <strong>not</strong> be emailed.
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit" :class => "btn btn-primary" %>
  </div>
<% end %>
