<% unless upload.id.nil? %>
	<li id="<%= upload.id %>">
		<%= link_to "#{File.basename(upload.file.to_s)} - (#{number_to_human_size(upload.file.size)})", download_file_path(upload.shortcut) %> 
        <%= link_to "Delete", share_upload_path(share,upload, :access_key => params[:access_key]), :method => :delete, :remote => true, :class => "delete" %>
	</li>
<% end %>
