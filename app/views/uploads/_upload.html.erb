<% unless upload.id.nil? %>
  <li id="<%= upload.id %>">
    <%= link_to "#{File.basename(upload.file.to_s)} - (#{number_to_human_size(upload.file.size)})", download_file_path(upload.shortcut) %> 
    (uploaded: <%= upload.created_at.to_formatted_s(:long_ordinal) %>) 
    <% unless skip_delete %>
      <a href="<%= url_for share_upload_path(share, upload, :access_key => params[:access_key]) %>" data-method="delete" data-remote="true" class="delete"><i class="icon-trash"></i> Delete</a>
    <% end %>
  </li>
<% end %>
